@model InventarioAzure.Models.DB.Usuario

@{
    ViewData["Title"] = "Delete";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Eliminar Usuarios</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Eliminar</h3>
                        </div>
                        <p>
                            Estas seguro de eliminar el registro?
                        </p>
                        <div>
                            <h4>Usuario</h4>
                            <hr />
                            <dl class="row">
                                <dt class = "col-sm-2">
                                    @Html.DisplayNameFor(model => model.Usuario1)
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Usuario1)
                                </dd>
                                <dt class = "col-sm-2">
                                    @Html.DisplayNameFor(model => model.Password)
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Password)
                                </dd>
                                <dt class = "col-sm-2">
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Nombre)
                                </dd>
                                <dt class = "col-sm-2">
                                    @Html.DisplayNameFor(model => model.Dui)
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Dui)
                                </dd>
                                <dt class = "col-sm-2">
                                    @Html.DisplayNameFor(model => model.Rol)
                                </dt>
                                <dd class = "col-sm-10">
                                    @Html.DisplayFor(model => model.Rol)
                                </dd>
                            </dl>
    
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="IdUsuario" />
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                                <a asp-action="Index">Back to List</a>
                            </form>
                        </div>

                        </div>
                    <!-- /.card -->


                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>